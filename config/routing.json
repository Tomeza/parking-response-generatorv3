  "tiebreakerRules": {
    "order": [
      "usageLabel",
      "updated_at",
      "id"
    ],
    "usageLabelPriority": {
      "◯": 1,
      "△": 2,
      "✖️": 3
    },
    "sortDirection": {
      "usageLabel": "asc",
      "updated_at": "desc",
      "id": "asc"
    }
  }
