generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["extensions", "public"]
}

/// This model contains an expression index which requires additional setup for migrations. Visit https://pris.ly/d/expression-indexes for more info.
model Knowledge {
  id                  Int                          @id @default(autoincrement())
  main_category       String?                      @db.VarChar(50)
  sub_category        String?                      @db.VarChar(50)
  detail_category     String?                      @db.VarChar(50)
  question            String?
  answer              String
  is_template         Boolean                      @default(false)
  usage               String?                      @db.VarChar(10)
  note                String?
  issue               String?
  createdAt           DateTime                     @default(now())
  updatedAt           DateTime                     @updatedAt
  embedding_vector    Unsupported("vector")?
  feedback_weights    FeedbackWeight[]
  question_variations KnowledgeQuestionVariation[]
  knowledge_tags      KnowledgeTag[]
  response_logs       ResponseLog[]

  @@index([question, answer])
  @@index([main_category, sub_category])
  @@index([detail_category])
  @@index([answer], map: "knowledge_pgroonga_answer_idx")
  @@index([question], map: "knowledge_pgroonga_question_idx")
  @@index([main_category], map: "knowledge_pgroonga_main_category_idx")
  @@index([sub_category], map: "knowledge_pgroonga_sub_category_idx")
  @@schema("public")
}

model Tag {
  id             Int            @id @default(autoincrement())
  tag_name       String         @unique @db.VarChar(50)
  description    String?
  alert_words    AlertWord[]
  knowledge_tags KnowledgeTag[]
  tag_synonyms   TagSynonym[]

  @@schema("public")
}

model KnowledgeTag {
  knowledge_id Int
  tag_id       Int
  knowledge    Knowledge @relation(fields: [knowledge_id], references: [id])
  tag          Tag       @relation(fields: [tag_id], references: [id])

  @@id([knowledge_id, tag_id])
  @@schema("public")
}

model AlertWord {
  id             Int     @id @default(autoincrement())
  word           String  @unique @db.VarChar(50)
  description    String?
  related_tag_id Int?
  priority       Int     @default(5)
  related_tag    Tag?    @relation(fields: [related_tag_id], references: [id])

  @@schema("public")
}

model ResponseLog {
  id                 Int        @id @default(autoincrement())
  query              String
  response           String
  used_knowledge_ids Int[]
  missing_tags       String[]
  missing_alerts     String[]
  feedback           Boolean?
  created_at         DateTime   @default(now())
  knowledge_id       Int?
  response_count     Int        @default(1)
  knowledge          Knowledge? @relation(fields: [knowledge_id], references: [id])

  @@schema("public")
}

model SeasonalInfo {
  id          Int      @id @default(autoincrement())
  info_type   String   @db.VarChar(50)
  start_date  DateTime @db.Date
  end_date    DateTime @db.Date
  description String?
  created_at  DateTime @default(now())
  updated_at  DateTime @default(now())

  @@schema("public")
}

model FeedbackWeight {
  query_pattern  String    @db.VarChar(100)
  knowledge_id   Int
  weight         Float     @default(1.0)
  positive_count Int       @default(0)
  negative_count Int       @default(0)
  last_updated   DateTime  @default(now())
  knowledge      Knowledge @relation(fields: [knowledge_id], references: [id])

  @@id([query_pattern, knowledge_id])
  @@unique([query_pattern, knowledge_id])
  @@schema("public")
}

model TagSynonym {
  id      Int    @id @default(autoincrement())
  tag_id  Int
  synonym String @db.VarChar(50)
  tag     Tag    @relation(fields: [tag_id], references: [id])

  @@unique([tag_id, synonym])
  @@schema("public")
}

model SearchHistory {
  id        Int      @id @default(autoincrement())
  query     String
  category  String?
  tags      String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([query])
  @@index([category])
  @@index([tags])
  @@schema("public")
}

model AdminUser {
  id            Int      @id @default(autoincrement())
  username      String   @unique
  email         String?  @unique
  password_hash String
  created_at    DateTime @default(now())
  updated_at    DateTime

  @@schema("public")
}

model SearchSynonym {
  id         Int      @id @default(autoincrement())
  word       String   @db.VarChar(50)
  synonym    String   @db.VarChar(50)
  created_at DateTime @default(now())

  @@unique([word, synonym])
  @@schema("public")
}

model KnowledgeQuestionVariation {
  id           Int       @id @default(autoincrement())
  knowledge_id Int
  variation    String
  created_at   DateTime  @default(now())
  knowledge    Knowledge @relation(fields: [knowledge_id], references: [id])

  @@index([variation])
  @@index([knowledge_id])
  @@schema("public")
}

model FaqRaw {
  id              Int                    @id @default(autoincrement())
  question        String
  answer          String
  embedding       Unsupported("vector")?
  created_at      DateTime               @default(now()) @db.Timestamptz(3)
  updated_at      DateTime               @default(now()) @db.Timestamptz(3)
  category        String?
  tags            String[]
  complexity      Int?
  requires_review Boolean                @default(false)
  review_reason   String?
  reviews         FaqReviewHistory[]
  faq_usage_stats FaqUsageStats[]

  @@map("faq_raw")
  @@schema("public")
}

model FaqReviewHistory {
  id             Int      @id @default(autoincrement())
  faqId          Int      @map("faq_id")
  originalAnswer String
  refinedAnswer  String
  reviewType     String
  reviewer       String?
  reviewDate     DateTime @default(now()) @map("review_date")
  faq            FaqRaw   @relation(fields: [faqId], references: [id], onDelete: Cascade)

  @@map("faq_review_history")
  @@schema("public")
}

model FaqReviewTriggers {
  id            Int      @id @default(autoincrement())
  conditionType String
  threshold     Json
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @default(now()) @map("updated_at")

  @@index([isActive])
  @@map("faq_review_triggers")
  @@schema("public")
}

model FaqUsageStats {
  id        BigInt   @id @default(autoincrement())
  faqId     Int
  queryHash String
  usedAt    DateTime @default(now()) @db.Timestamptz(3)
  success   Boolean  @default(false)
  route     String
  latencyMs Int
  userId    String?
  sessionId String?
  queryText String
  faq_raw   FaqRaw   @relation(fields: [faqId], references: [id], onDelete: Cascade)

  @@index([faqId])
  @@index([queryHash])
  @@index([usedAt])
  @@map("faq_usage_stats")
  @@schema("public")
}

model FaqClassificationLog {
  id          String    @id
  faqId       String
  category    String
  confidence  Float
  reason      String
  needsReview Boolean   @default(false)
  reviewed    Boolean   @default(false)
  reviewedAt  DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime

  @@index([category])
  @@index([createdAt])
  @@index([faqId])
  @@schema("public")
}
